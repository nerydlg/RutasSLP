<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context="com.nerydelgado.rutasslp.SelectRute">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_menu"
        android:text="@string/select_rute_msg"
        />
    
    <ListView
        android:id="@+id/rute_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="right">
            <Button
                android:id="@+id/btn_return"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/btn_margin_right"
                android:padding="5dp"
                android:layout_gravity="right"
                android:text="@string/btn_return"
                android:drawableLeft="@drawable/close"
                />
            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/btn_margin_right"
                android:padding="5dp"
                android:layout_gravity="right"
                android:drawableRight="@drawable/tick"
                android:text="@string/btn_next"
                />
    </LinearLayout>

</LinearLayout>
